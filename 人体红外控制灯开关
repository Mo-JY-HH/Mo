volatile int hongwai;

void setup(){
  hongwai = 0;
  pinMode(3, INPUT);
  Serial.begin(9600);
  pinMode(6, OUTPUT);
}

void loop(){
  while (true) {
    hongwai = digitalRead(3);
    Serial.println(digitalRead(3));
    if (hongwai == 0) {
      digitalWrite(6,LOW);

    }
    if (hongwai == 1) {
      digitalWrite(6,HIGH);

    }
  }

}

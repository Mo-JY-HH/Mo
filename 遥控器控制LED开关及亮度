#include <IRremote.h>

IRrecv irrecv_8(8);
decode_results results_8;

long ir_item;
volatile int led;
volatile boolean ledstate;

void setup(){
  Serial.begin(9600);
  led = 0;
  ledstate = 0;
  irrecv_8.enableIRIn();
}

void loop(){
  if (irrecv_8.decode(&results_8)) {
    ir_item=results_8.value;
    String type="UNKNOWN";
    String typelist[14]={"UNKNOWN", "NEC", "SONY", "RC5", "RC6", "DISH", "SHARP", "PANASONIC", "JVC", "SANYO", "MITSUBISHI", "SAMSUNG", "LG", "WHYNTER"};
    if(results_8.decode_type>=1&&results_8.decode_type<=13){
      type=typelist[results_8.decode_type];
    }
    Serial.print("IR TYPE:"+type+"  ");
    Serial.println(ir_item,HEX);
    if (ir_item == 0xFF629D) {
      ledstate = !ledstate;
      led = ledstate * 128;

    }
    if (led != 0 && ir_item == 0xFFA25D) {
      led = constrain(led - 20, 1, 255);

    }
    if (led != 0 && ir_item == 0xFFE21D) {
      led = constrain(led + 20, 1, 255);

    }
    Serial.println(led);
    analogWrite(10,led);
    irrecv_8.resume();
  } else {
  }

}
